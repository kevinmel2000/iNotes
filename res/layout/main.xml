<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:background="@drawable/background"
    >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="730dp"
        android:layout_height="570dp"
        android:layout_x="508dp"
        android:layout_y="101dp"
        android:cursorVisible="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lineSpacingMultiplier="1.05"
        android:textColor="@color/Black"
        android:textCursorDrawable="@null"
         >

    <requestFocus></requestFocus>
    </EditText>
    
    <EditText
        android:id="@+id/txtDate"
        android:layout_width="731dp"
        android:layout_height="wrap_content"
        android:layout_x="518dp"
        android:layout_y="66dp"
        android:editable="false"
        android:gravity="right"
        android:inputType="none"
        android:textColor="@color/Black" >
  
    </EditText>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="330dp"
        android:layout_height="440dp"
        android:layout_x="52dp"
        android:layout_y="104dp"
        android:background="@color/TextBackground"
        android:listSelector="@drawable/list_selector"
        >
    </ListView>

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="751dp"
        android:layout_y="22dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:textColor="@color/White" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1213dp"
        android:layout_y="20dp"
        android:background="@null"
        android:src="@drawable/add_note" />

    <ImageButton
        android:id="@+id/imageButtonDelete"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_x="874dp"
        android:layout_y="696dp"
        android:background="@null"
        android:src="@drawable/delete_note" />

    <ImageButton
        android:id="@+id/imageButtonMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="768dp"
        android:layout_y="696dp"
        android:background="@null"
        android:src="@drawable/mail_note" />

    <EditText
        android:id="@+id/txtNoteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="103dp"
        android:layout_y="18dp"
        android:ems="10"
        android:gravity="center_horizontal" />

</AbsoluteLayout>
